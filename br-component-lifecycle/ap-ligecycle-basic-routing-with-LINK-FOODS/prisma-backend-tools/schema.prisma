generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Item {
  id            Int      @id @default(autoincrement())
  name          String
  date_posted   String
  category      String
  rating        String
  savedItems SavedItem[] // this is referencing the SavedItem table
  boughtItems BoughtItem[]
}

model SavedItem {
  id        Int     @id @default(autoincrement())
  itemId     Int     // Foreign key referencing the ID of the Item model
  item       Item     @relation(fields: [itemId], references: [id]) // Define the relationship with the Item model
  createdAt DateTime @default(now()) // Optional: Include a createdAt timestamp
}

model BoughtItem {
  id        Int     @id @default(autoincrement())
  itemId     Int     // Foreign key referencing the ID of the Item model
  item       Item     @relation(fields: [itemId], references: [id]) // Define the relationship with the Item model
  fullName  String
}